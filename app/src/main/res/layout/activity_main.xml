<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_herzlichwillkommen"
        android:text="@string/willkommen"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_rot"
        android:text="@string/rot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_herzlichwillkommen" />

    <Button
        android:id="@+id/btn_beenden"
        android:text="@string/beenden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_herzlichwillkommen"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_gelb"
        android:text="@string/gelb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tv_herzlichwillkommen"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>


